# =============================================================================
# Copy this file to .env and update values for your local environment.
# NEVER commit .env to Git.
# =============================================================================

# Application
NODE_ENV=development          # development | production
PORT=3001

# Backend Service (FastAPI)
BACKEND_URL=http://localhost:8000

# JWT Configuration
# IMPORTANT: Use the SAME secret key as your FastAPI backend
JWT_SECRET=your-secret-key-here-must-match-backend-secret-key
JWT_ALGORITHM=HS256

# Token Expiry (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Allow requests from React frontend
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000   # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window per IP

# Logging
LOG_LEVEL=info                # error | warn | info | debug