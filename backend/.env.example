# =============================================================================
# CLIENT PORTAL — BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update values for your local environment.
# NEVER commit .env to Git — add it to .gitignore immediately.
# =============================================================================

# Application
APP_NAME="Client Portal"
APP_VERSION="1.0.0"
DEBUG=true                          # Set to false in production
ENVIRONMENT=development             # development | staging | production

# Database
DATABASE_URL=postgresql://portal_user:portal_pass_dev@localhost:5432/client_portal

# Security
# Generate a strong secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production-minimum-32-chars
ALGORITHM=HS256

# JWT Token Expiry (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=15      # Short-lived access token
REFRESH_TOKEN_EXPIRE_DAYS=7         # Long-lived refresh token

# Account Security
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# CORS (for local development — Express middleware runs on 3001, React on 3000)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO                      # DEBUG | INFO | WARNING | ERROR | CRITICAL